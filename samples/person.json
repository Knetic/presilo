{
  "type": "object",
  "title": "Person",
  "description": "Represents an individual which may have a first/last name, as well as an age.\nThis type does not presume that the Person is awesome or not.",
  "properties":
  {
    "firstName":
    {
      "type": "string",
      "minLength": 3
    },
    "lastName":
    {
      "type": "string",
      "minLength": 3
    },
    "age":
    {
      "description": "Age in years",
      "type": "integer",
      "minimum": 0
    },
    "height":
    {
      "description": "Age in meters",
      "type": "number",
      "minimum": 0,
      "multipleOf": 2
    }
  },
  "required": ["firstName", "lastName"]
}
